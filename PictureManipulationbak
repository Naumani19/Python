def test4(picture) :
  for pixel in getPixels(picture) :
    red = getRed(pixel)/3
    green = getGreen(pixel)/3
    blue = getBlue(pixel)/3
    color = makeColor(red, green, blue)
    setColor(pixel, color)
  show(picture)


  
